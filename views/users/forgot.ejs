<%- include("../partials/header") %>

<h1 class="text-center">Forgot Your Password?</h1>

<form action="/users/forgot" method="POST">
	<h5>An email to reset your account's password will be sent to your email address.</h5>
	<div class="form-group row">
		<label class="col-md-2 col-form-label" for="email">Email: </label>
		<div class="col-md-10">
			<input class="form-control" type="email" name="email" autofocus required>	
		</div>
	</div>

	<div class="form-group row">
		<input type="submit" class="btn btn-md btn-info btn-block" value="Reset Password">
	</div>
</form>

<%- include("../partials/footer") %>
