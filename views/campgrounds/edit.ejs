<%- include("../partials/header") %>


<div class="card edit-form">
	

<div class="row">
	<div class="col-md-10">
		<h1 class="col-md-10">Edit: <%= campground.name %></h1>	
	</div>

	<div class="col-md-2">
		<form class="delete-form" action="/campgrounds/<%= campground.slug %>?_method=DELETE" method="POST">
			<button type="submit" class="btn btn-md btn-danger"><i class="fas fa-trash-alt"></i></button>
		</form>	
	</div>	
</div>

<form action="/campgrounds/<%= campground.slug %>?_method=PUT" method="POST">

	<div class="form-group row">
		<label class="col-md-2 col-form-label">Name:</label>
		<div class="col-md-10">
			<input class="form-control" name="campground[name]" type="text" value="<%= campground.name %>">
		</div>
	</div>
	
	<div class="form-group row">
		<label class="col-md-2 col-form-label">Image:</label>
		<div class="col-md-10">
			<input class="form-control" name="campground[image]" type="text" value="<%= campground.image %>">
		</div>
	</div>
	
	<div class="form-group row">
		<label class="col-md-2 col-form-label">Price:</label>
		<div class="col-md-10">
			<input class="form-control" name="campground[price]" type="number" value="<%= campground.price %>" min="0.00" step="0.01">
		</div>
	</div>
	
	<div class="form-group row">
		<label class="col-md-2 col-form-label">Location:</label>
		<div class="col-md-10">
			<input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
		</div>
	</div>
	
	<div class="form-group row">
		<label class="col-md-2 col-form-label">Description:</label>
		<div class="col-md-10">
			<textarea class="form-control" name="campground[description]" rows="10"><%= campground.description %></textarea>
		</div>
	</div>
	
	<div class="form-group row">
		<div class="col-sm-2">
			<a href="/campgrounds/<%=campground.id%>" class="btn btn-md btn-info">Cancel</a>
		</div>
		<div class="col-sm-10">
			<button type="submit" class="btn btn-md btn-info">Submit</button>		
		</div>	
		
	</div>

</form>
</div>
<%- include("../partials/footer") %>

