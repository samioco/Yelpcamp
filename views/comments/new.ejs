<%- include("../partials/header") %>


<h1 class="text-center">Add New Comment to: <%= campground.name %></h1>
<form action="/campgrounds/<%= campground.slug %>/comments" method="POST">
	<div class="form-group row">
		<textarea class="form-control" rows="5" name="comment[text]" type="text" placeholder="comment"></textarea>
	</div>
	
	<div class="form-group row">
		<div class="col-sm-3">
			<a href="/campgrounds/<%= campground.slug %>" class="btn btn-md btn-info">Cancel</a>
		</div>
		<div class="col-sm-9">
			<button type="submit" class="btn btn-md btn-info">Submit</button>		
		</div>	
	</div>
</form>


<%- include("../partials/footer") %>