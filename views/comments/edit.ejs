<%- include("../partials/header") %>


<h1 class="text-center">Edit Comment:</h1>
<form action="/campgrounds/<%= campgroundSlug %>/comments/<%= comment.id%>?_method=PUT" method="POST">
	<div class="form-group row">
		<textarea class="form-control" rows="5" name="comment[text]" type="text"><%=comment.text%></textarea>
	</div>
	
	<div class="form-group row">
		<div class="col-sm-2">
			<a href="/campgrounds/<%= campgroundId %>" class="btn btn-md btn-info">Cancel</a>
		</div>
		<div class="col-sm-8">
			<button type="submit" class="btn btn-md btn-info">Submit</button>		
		</div>	
	</div>
</form>


<%- include("../partials/footer") %>